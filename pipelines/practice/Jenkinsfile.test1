pipeline {
    agent any

    environment {
        DOCKER_IMAGE = '01791689522/first-jenkins:1.0.0'
    }

    stages {
        stage('clone repository') {
            steps {
                git url: "https://github.com/dev-Anamul/jenkins-practice.git", branch: 'master'
            }
        }

        stage('List Directory Contents') {
            steps {
                sh 'cd one-jen && pwd && ls -la' 
            }
        }

        stage('test the code') {
            agent docker {
                image 'node:20-alpine'
            }

            steps {
                sh 'cd one-jen && yarn install'
                sh 'cd one-jen && yarn test'
                sh 'cd one-jen && yarn lint'
                sh 'cd one-jen && yarn format'
                sh 'cd one-jen && yarn build'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'docker-login',
                            usernameVariable: 'DOCKER_USERNAME',
                            passwordVariable: 'DOCKER_PASSWORD'
                        )
                    ]) {
                        sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                        echo 'Logged in to Docker Hub'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def image = docker.build("${DOCKER_IMAGE}") 
                    image.push() 
                }
            }
        }
        
    }

    post {
        always {
            echo 'Pipeline completed'
        }
    }
}
